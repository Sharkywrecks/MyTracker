<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodTrackerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calorieLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Calories"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/calorieBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fatLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fat"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/fatBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/satFatLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sat. Fat"
                android:textSize="16sp" />
            <ProgressBar
                android:id="@+id/satFatBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/carbsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohydrates"
            android:textSize="16sp" />
        <ProgressBar
            android:id="@+id/carbsBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:progress="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/proteinLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Protein"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/proteinBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:padding="16dp"
                android:progress="50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fibreLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fibre"
                android:textSize="16sp" />
            <ProgressBar
                android:id="@+id/fibreBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saltLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Salt"
                android:textSize="16sp" />
            <ProgressBar
                android:id="@+id/saltBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>