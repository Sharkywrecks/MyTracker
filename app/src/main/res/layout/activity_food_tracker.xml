<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodTrackerActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/food_tracker_background"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Days Nutrients"
            android:textSize="40sp"
            android:textColor="#A39D9D"
            android:textStyle="bold"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="30sp"
            android:textColor="#C3BDBD"
            android:fontFamily="@font/acme"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Spinner
            android:id="@+id/filterDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calorieLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Calories"
                android:textSize="18dp"
                android:textColor="#A39D9D"/>

            <ProgressBar
                android:id="@+id/calorieBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:scaleY="3"/>
        </LinearLayout>

        <TextView
            android:id="@+id/calorieProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/0g"
            android:gravity="end"
            android:paddingEnd="18dp"
            android:textSize="16dp"
            android:textColor="#A39D9D"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fatLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fat"
                android:textSize="18dp"
                android:textColor="#A39D9D"/>

            <ProgressBar
                android:id="@+id/fatBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:scaleY="3"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fatProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/0g"
            android:gravity="end"
            android:paddingEnd="18dp"
            android:textSize="16dp"
            android:textColor="#A39D9D"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/carbsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohydrates"
            android:textSize="18dp"
            android:textColor="#A39D9D"/>
        <ProgressBar
            android:id="@+id/carbsBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:progress="100"
            android:scaleY="3"/>
        </LinearLayout>
        <TextView
            android:id="@+id/carbsProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:gravity="end"
            android:paddingEnd="18dp"
            android:textSize="16dp"
            android:textColor="#A39D9D"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/proteinLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Protein"
                android:textSize="18dp"
                android:textColor="#A39D9D"/>

            <ProgressBar
                android:id="@+id/proteinBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:padding="18dp"
                android:progress="50"
                android:scaleY="3" />
        </LinearLayout>
        <TextView
            android:id="@+id/proteinProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:gravity="end"
            android:paddingEnd="18dp"
            android:textSize="16dp"
            android:textColor="#A39D9D"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fibreLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fibre"
                android:textSize="18sp"
                android:textColor="#A39D9D"/>
            <ProgressBar
                android:id="@+id/fibreBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:scaleY="3"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fibreProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:gravity="end"
            android:paddingEnd="18dp"
            android:textSize="16dp"
            android:textColor="#A39D9D"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saltLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Salt"
                android:textSize="18dp"
                android:textColor="#A39D9D"/>

            <ProgressBar
                android:id="@+id/saltBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:scaleY="3" />
        </LinearLayout>

        <TextView
            android:id="@+id/saltProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:gravity="end"
            android:paddingEnd="18dp"
            android:textSize="16dp"
            android:textColor="#A39D9D"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

        <Button
            android:id="@+id/changeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change" />
    </LinearLayout>

</RelativeLayout>